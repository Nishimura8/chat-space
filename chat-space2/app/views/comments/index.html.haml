.wrapper
  .side-contents
    .side-contents__header
      %p.side-contents__header__name
        = current_user.name
      .side-contents__header__manu
        .side-contents__header__manu__setting 
          =link_to new_group_path, class: "Contents__btn Contents__btn--facebook" do
            = fa_icon 'edit', class: "Contents__btn--icon"
        .side-contents__header__manu__setting2
          =link_to edit_user_path(current_user), class: "Contents__btn Contents__btn--facebook" do
            = fa_icon 'gear ', class: "Contents__btn--icon"
    .side-contents__main
      .side-contents__main__member
        - current_user.groups.each do |group|
          .group
            = link_to group_comments_path(group) do
              .group__name
                = group.name
              .group__message
                = group.show_last_message
    
  .contents-main
    .contents-main__header
      .contents-main__header__user
        .contents-main__header__user__comment 
          = @group.name
        .contents-main__header__user__name 
          = current_user.name
      = link_to edit_group_path(@group) do
        .contents-main__header__edit-btn Edit
    .contents-main__main
      - @comments.each do |comment|
        .contents-box
          .contents-main__main__font-box
            .contents-main__main__font-box__name 
              = comment.user.name
            .contents-main__main__font-box__message
              = comment.created_at
          .contents-main__main__font3 
            = comment.content
    .contents-main__bottom
      = form_for [@group, @comment] do |f|
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .contents-main__bottom__icon
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
        .contents-main__bottom__send 
          = f.submit 'Send', class: 'form__submit'

